<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Short-Url</title>
    <link rel="stylesheet" href="home.css">
    <style>
        body{
            margin: 0;
            padding: 0;
        }
        h1{
            text-align: center;
        }
        form{
            text-align: center;
        }
        table{
            display: flex;
            align-items: center;
            flex-direction: column;
            margin-top: 20px;
        }
        th{
            padding: 5px;
        }
    </style>
</head>
<body>
    <h1>Url Shortener</h1>
    <form action="/url" method="POST">
        <input type="text" placeholder="http://example.com" name="url" required>
        <button type="submit">Generate</button>
    </form>

        <% if (locals.id) { %>
           <p> http://localhost:8000/url/<%=id%></p>
        <% } %>

        <table border="1">
            <thead>
                <tr>
                    <th>Sr No</th>
                    <th>ShortId</th>
                    <th>RedirectUrl</th>
                    <th>Clicks</th>
                </tr>
            </thead>
            <tbody>
                <% if (locals.urls) { %>
                    <% urls.forEach(( url , index) => { %>
                        <tr>
                            <th><%= index + 1 %></th>
                            <th><%= url.shortId %></th>
                            <th><%= url.redirectUrl%></th>
                            <th><%= url.visitHistory.length %></th>
                        </tr>
                    <% }) %>
                <% } %>
            </tbody>
        </table>
    
</body>
</html>